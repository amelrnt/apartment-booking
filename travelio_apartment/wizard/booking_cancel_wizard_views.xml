<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_booking_cancel_wizard_form" model="ir.ui.view">
    <field name="name">booking.cancel.wizard.form</field>
    <field name="model">booking.cancel.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="reason" placeholder="Explain why this booking is being cancelled..."/>
        </group>
        <footer>
          <button name="action_confirm_cancel" string="Confirm Cancel" type="object" class="btn-danger"/>
          <button string="Discard" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>