<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_apartment_unit_tree" model="ir.ui.view">
    <field name="name">travelio.apartment.unit.tree</field>
    <field name="model">travelio.apartment.unit</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="building_name"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_apartment_unit_form" model="ir.ui.view">
    <field name="name">travelio.apartment.unit.form</field>
    <field name="model">travelio.apartment.unit</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_open_booking_wizard" string="Request Booking" type="object" class="oe_highlight" invisible="active == False"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="building_name"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_apartment_unit_search" model="ir.ui.view">
    <field name="name">travelio.apartment.unit.search</field>
    <field name="model">travelio.apartment.unit</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="building_name"/>
        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
      </search>
    </field>
  </record>

  <record id="action_apartment_unit" model="ir.actions.act_window">
    <field name="name">Apartment Units</field>
    <field name="res_model">travelio.apartment.unit</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_apartment_unit_search"/>
  </record>

  <menuitem id="menu_travelio_root" name="Travelio Booking" sequence="10"/>


  <menuitem id="menu_apartment_unit" name="Units" parent="menu_travelio_root" action="action_apartment_unit" sequence="10"/>
</odoo>