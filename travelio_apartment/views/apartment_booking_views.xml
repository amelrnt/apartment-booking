<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_apartment_booking_tree" model="ir.ui.view">
    <field name="name">travelio.apartment.booking.tree</field>
    <field name="model">travelio.apartment.booking</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="customer_id"/>
        <field name="unit_id"/>
        <field name="checkin_date"/>
        <field name="checkout_date"/>
        <field name="state" widget="badge"/>
      </list>
    </field>
  </record>

  <record id="view_apartment_booking_form" model="ir.ui.view">
    <field name="name">travelio.apartment.booking.form</field>
    <field name="model">travelio.apartment.booking</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_open_cancel_wizard" string="Cancel" type="object" invisible="state == 'cancelled'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,hold,confirmed"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="customer_id"/>
              <field name="unit_id"/>
            </group>
            <group>
              <field name="checkin_date"/>
              <field name="checkout_date"/>
              <field name="hold_expired_at" invisible="state != 'hold'"/>
            </group>
          </group>
          <group string="Cancellation Info" invisible="state != 'cancelled'">
            <field name="cancel_reason" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_apartment_booking_search" model="ir.ui.view">
    <field name="name">travelio.apartment.booking.search</field>
    <field name="model">travelio.apartment.booking</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="customer_id"/>
            <field name="unit_id"/>
            <group>
                <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                <filter string="Unit" name="group_by_unit" context="{'group_by': 'unit_id'}"/>
            </group>
        </search>
    </field>
</record>

  <record id="action_apartment_booking" model="ir.actions.act_window">
    <field name="name">Bookings</field>
    <field name="res_model">travelio.apartment.booking</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_apartment_booking_search"/>
  </record>
  
  <menuitem id="menu_travelio_bookings" name="Bookings" parent="menu_travelio_root" action="action_apartment_booking" sequence="20"/>
  
</odoo>